#endif

#define NOMENU 0
#define IBMENU 1
#define OPTIONSETMENU 2
#define FONTSTYLEMENU 3
#define CURSORMENU 4 /* extends through 4,5,6,7 for different cursor types */
#define FILETYPEMENU 8
#define MODESMENU 9 /* extends through 9, 10, 11, 12, 13, 14 */
