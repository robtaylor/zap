		GET	h.Main
		GET	h.Commands
		GET	h.Common
		GET	h.C_Redraw
		GET	h.Support
		GET	h.Tables

		AREA	|Asm$$code|,CODE,READONLY


;  Called when window enters this mode

		EXPORT	start$CPP
start$CPP	LDR	r0,ws_mode$CPP
		B	intstart$C

		EXPORT	start$J
start$J		LDR	r0,ws_mode$J
		B	intstart$C

		EXPORT	start$C
start$C		LDR	r0,ws_mode$C

		EXPORT	intstart$C
intstart$C	SAVE	r1,modeblk
		MOV	r1,r0
		BL	getformat
		BIC	r1,r1,#255
		ORR	r1,r1,r0
		BL	setformat
		MOV	r1,#-1
		BL	ensuresize$C
		RTS	VS
		TEQ	fileblk,#0
		MOVNE	r1,#0
		STRNE	r1,m_cacheaddr$C
		LDRNE	r1,=defaultstate$C
		STRNE	r1,m_cachestate$C
		MOVNE	r1,#-1
		STRNE	r1,m_cacheaddr$C+8
		LDR	r0,m_info
		LDR	r0,[r0,#i_mode]
		CALL	Zap_RestoreModeWord
;		BL	initglobals		; set up global states...
		RTS


		LOCAL


;  Called when window leaves this mode

		EXPORT	end$C
end$C		STMFD	sp!,{r1,modeblk,lr}
		MOV	r1,#0
		BL	ensuresize$C
		LDRVC	r0,ws_mode$C
		LDR	r0,m_info
		LDR	r0,[r0,#i_mode]
		CALL	Zap_SaveModeWord,,VC
		LDMFD	sp!,{r1,modeblk,pc}


		LOCAL


;  Called after file is loaded (switches to appropriate mode if not C)

ptr$L		RN	r0
char$L		RN	r1
end$L		RN	r2
cr$L		RN	r3
tab$L		RN	lr

		EXPORT	postload$C
postload$C	SAVE	r1-r3
		CMP	R1,#0
		RTS	NE
;		SWI	&107
		LDR	ptr$L,f_ptr
		LDR	end$L,f_splito
		ADD	end$L,ptr$L,end$L
		LDRB	cr$L,w_cr
		LDRB	tab$L,w_tabchar
loop$L		CMP	ptr$L,end$L
		RTS	HS
		LDRB	char$L,[ptr$L],#1
		TEQ	char$L,#' '
		TEQNE	char$L,cr$L
		TEQNE	char$L,tab$L
		BEQ	loop$L
		LDR	tab$L,ws_mode$C
		TEQ	char$L,#';'
		LDREQ	tab$L,ws_mode$ASM
		TEQ	char$L,#'('
		LDREQ	tab$L,ws_mode$P
		TEQ	char$L,#'/'
		BNE	notcpp$L
		CMP	ptr$L,end$L
		RTS	HS
		LDRB	char$L,[ptr$L],#1
		TEQ	char$L,#'/'
		LDREQ	tab$L,ws_mode$CPP
notcpp$L	LDR	r1,w_format
		BIC	r1,r1,#255
		ORR	r1,r1,tab$L
		STR	r1,w_format
		RTS


		LOCAL


;  Insert return(s)

		EXPORT	return$C
return$C	STMFD	sp!,{lr}
		CALL	Zap_StartOp
		BL	getprevchar
		TEQ	r0,#'{'
		BNE	noindent$L
		BL	getindentcurr$C
		MOV	r2,r0
		BL	getindent$C
		ADD	r2,r2,r0
		STMFD	sp!,{r1,r2,r8-r10}
		MOV	r1,#1
		LDR	r9,=e_return
		BL	callbasemode
		LDMFD	sp!,{r1,r2,r8-r10}
		SUB	r1,r1,#1
		BL	getindentcurr$C
		SUBS	r0,r2,r0
		BLE	noindent$L
		STMFD	sp!,{r1,r8-r10}
		MOV	r5,r0
		BL	getflags
		MOV	r4,r0
		BL	getformat
		MOV	r6,r0
		ADR	r7,thirtytwospaces
		LDR	r9,=e_char
		BL	callbasemode
		LDMFD	sp!,{r1,r8-r10}
noindent$L	CMP	r1,#0
		BLE	noreturn$L
		LDR	r9,=e_return
		BL	callbasemode
noreturn$L	CALL	Zap_StopOp
		LDMFD	sp!,{pc}

thirtytwospaces	=	"                                ",0


		LOCAL


;  Insert character(s)

		EXPORT	char$C
char$C		STMFD	sp!,{lr}
		MOV	r1,#0
00		CMP	r1,r5
		BGE	%f01
		LDRB	r0,[r7,r1]
		TEQ	r0,#'}'
		TEQNE	r0,#')'
		TEQNE	r0,#']'
		ADDNE	r1,r1,#1
		BNE	%b00
		BL	%f02
		SUB	r5,r5,r1
		ADD	r7,r7,r1
		TEQ	r0,#'}'
		BLEQ	%f03
		TEQ	r0,#')'
		BLEQ	%f05
		TEQ	r0,#']'
		BLEQ	%f06
		SUB	r5,r5,#1
		ADD	r7,r7,#1
		MOV	r1,#0
		B	%b00

01		BL	%f02
		LDMFD	sp!,{pc}

02		CMP	r1,#0
		MOVLE	pc,lr
		STMFD	sp!,{r1-r10,lr}
		MOV	r5,r1
		LDR	r9,=e_char
		BL	callbasemode
		LDMFD	sp!,{r1-r10,pc}

03		STMFD	sp!,{r1-r10,lr}
		LDR	r0,c_off
		MOV	r1,#'{'
		MOV	r2,#'}'
		BL	findmatch$C
		BLT	%f04
		BL	moveandwait$C
		LDR	r9,=e_lineend
		BL	callbasemode
		BL	getindentline$C
		BL	adjustleft$C
		BL	adjustright$C
04		MOV	r5,#1
		LDR	r9,=e_char
		BL	callbasemode
		LDMFD	sp!,{r1-r10,pc}

05		STMFD	sp!,{r1-r10,lr}
		LDR	r0,c_off
		MOV	r1,#'('
		MOV	r2,#')'
		BL	findmatch$C
		BLEQ	moveandwait$C
		MOV	r5,#1
		LDR	r9,=e_char
		BL	callbasemode
		LDMFD	sp!,{r1-r10,pc}

06		STMFD	sp!,{r1-r10,lr}
		LDR	r0,c_off
		MOV	r1,#'['
		MOV	r2,#']'
		BL	findmatch$C
		BLEQ	moveandwait$C
		MOV	r5,#1
		LDR	r9,=e_char
		BL	callbasemode
		LDMFD	sp!,{r1-r10,pc}


		LTORG

		LOCAL


;  Jump to start of next function

		EXPORT	nextfunc$C
nextfunc$C	LDR	r4,c_loff
		MOV	r0,cursorblk
		LDR	r5,f_len
		BL	initfindfunc$C
		BL	findfunc$C
		BCS	exit$L
		MOV	cursorblk,r0
		STR	r1,c_off
		CALL	Zap_ReflectCaret
		CALL	Zap_ShowCursor
exit$L		LDMFD	sp!,{lr}
		B	stoplongop


		LOCAL


;  Jump to start of last function

		EXPORT	lastfunc$C
lastfunc$C	MOV	r4,#-1
		LDR	r5,c_loff
		STMFD	sp!,{cursorblk}
		BL	initfindfunc$C
		MOV	r0,#-1
loop$L		BL	findfunc$C
		MOVCC	r0,r1
		MOVCC	r4,r1
		BCC	loop$L
		TEQ	r1,#0
		CMPNE	r0,#-1
		BEQ	exit$L
		LDMFD	sp,{cursorblk}
		STR	r0,c_off
		CALL	Zap_ReflectCaret
		CALL	Zap_ShowCursor
exit$L		LDMFD	sp!,{cursorblk,lr}
		B	stoplongop


		LOCAL


;  Generate function browser

sourcetext$L	=	"Source file: ",0
functext$L	=	10,10,"Functions:"
newltext$L	=	10,0

