
#ifndef ADDEVENT
 #define ADDEVENT(a, b) a = b,

enum
{
   #include "events.h"
};


#else

// events for ZapFontMenu window
ADDEVENT(event_zfm_ENCODING,      0x100) // the Encodings button changed state
ADDEVENT(event_zfm_INITIAL,       0x101) // the Initial value button changed state
ADDEVENT(event_zfm_OTHER_BUTTONS, 0x102) // the rest of the option buttons
ADDEVENT(event_zfm_OK,            0x103) // the OK action button
ADDEVENT(event_zfm_CANCEL,        0x104) // the Cancel action button

#endif

#undef ADDEVENT

