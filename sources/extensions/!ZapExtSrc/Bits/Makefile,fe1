# Make file for Zap Bits Extension

Linkflags	= -o $@ -B 0x0 -bin -s @.Labels

ExtHdrs		= <ZapExtSource$Dir>.h.Macros <ZapExtSource$Dir>.h.RegNames

BitsHdrs	= t.module t.commands t.dscomms t.tmtcomms t.utils
BitsObjs	= o.module o.commands o.dscomms o.tmtcomms o.utils

__BUILD		= -PD "BUILD SETS \"$(BUILD)\""
__INTL		= -PD "INTL SETS \"$(INTL)\""
__TMFS		= -PD "TMFS SETS \"$(TMFS)\""

# had -depend !Depend
Objasmflags	= -I <ZapExtSource$Dir> -o $@ -stamp -Throwback
Zap		= <Zap$Dir>
ZapS		= <ZapSource$Dir>
ZapBits		= <ZapBits$Dir>
ZapBitsExt	= <ZapExtSource$Dir>.Bits

.SUFFIXES: .s .o .h .t
.s.t:;		@Run $(ZapS).data.StoH $(ZapBitsExt).s.$* $(ZapBitsExt).h.$*
		Create $(ZapBitsExt).t.$* 0

.s.o:;		objasm $(Objasmflags) $(__BUILD) $(__TMFS) $(__INTL) $<

# Final target:

ZapBits:	$(ExtHdrs) $(BitsObjs) $(BitsHdrs)
		link $(Linkflags) $(BitsObjs)
		Settype $(ZapBitsExt).$@ Module
		Run $(ZapS).data.MCopy $(ZapBitsExt).$@ $(ZapBits).ZapBits
		Run $(Zap).Code.MakeExtern.MakeExtern -ext ZapBits
		@Echo Made ZapBits

