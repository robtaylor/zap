 BL shortenname

 MOV R1,R2
 MOV R2,R6			; rest of font name
 BL strCMPstr			; new str
 BLEQ weedoutcases
 LDR R0,[R5]
 ORREQ R0,R0,#1			; ticking the font in use...
 BICNE R0,R0,#1			; and clearing any other ticks...
 STR R0,[R5],#24
 TST R0,#1<<7			; at end yet
